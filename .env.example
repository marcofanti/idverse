# IDVerse API Configuration (Required)
IDVERSE_CLIENT_ID=your_actual_client_id
IDVERSE_CLIENT_SECRET=your_actual_client_secret
IDVERSE_OAUTH_URL=https://us.demo.idkit.co/api/3.5/oauthToken
IDVERSE_API_URL=https://us.demo.idkit.co/api/3.5/sendSms

# Logging verbosity level
# Options: DEBUG, INFO, SECRET (logs complete request with credentials)
VERBOSE=DEBUG

# Mock OAuth token for testing (optional)
OAUTHTOKEN=

# Default form field values (optional)
TRANSACTION=
NAME=
SUPPLIED_FIRST_NAME=

# Webhook Configuration (Required)
NOTIFY_URL_COMPLETE=http://localhost:19746/api/webhook
NOTIFY_URL_EVENT=http://localhost:19746/api/webhook
JWT_SECRET_KEY=your_jwt_secret_key_here

# Authentication Key for web interface (Required)
AUTH_KEY=your_authentication_key_here

# Database Configuration
# Options: h2-memory (default), h2-file, docker
# Note: Spring profiles (--spring.profiles.active) override this setting
DATABASE_TYPE=h2-memory

# MySQL Configuration (Docker only)
MYSQL_ROOT_PASSWORD=rootpassword
MYSQL_DATABASE=idverse
MYSQL_USER=idverse_user
MYSQL_PASSWORD=idverse_pass
MYSQL_PORT=3307

# Application Configuration
APP_PORT=19746
DDL_AUTO=update
SHOW_SQL=false
